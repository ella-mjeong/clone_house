<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/basic_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RatingBar
        android:id="@+id/rv_rating"
        style="?android:ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="4sp"
        android:layout_marginTop="3sp"
        android:stepSize="0.1"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/rv_nickname" />

    <TextView
        android:id="@+id/rv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginTop="13dp"
        android:text="abc"
        android:gravity="center"
        android:textSize="11sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/rv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="5sp"
        android:text="2021.02.13"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/rv_rating"
        app:layout_constraintStart_toEndOf="@+id/rv_rating"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2sp"
        android:text="·"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/rv_date"
        app:layout_constraintStart_toEndOf="@+id/rv_date"
        app:layout_constraintTop_toTopOf="@+id/rv_date"
        tools:ignore="SmallSp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘의집 구매"
        android:textSize="11sp"
        android:layout_marginStart="2sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView20"
        app:layout_constraintStart_toEndOf="@+id/textView20"
        app:layout_constraintTop_toTopOf="@+id/textView20"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="2dp"
        android:layout_height="16dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/product_detail_brand_round"
        android:text=" "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/rv_opt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="opt1"
        android:textSize="11sp"
        app:layout_constraintStart_toEndOf="@+id/textView21"
        app:layout_constraintTop_toTopOf="@+id/textView21"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/rv_opt1_eq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/rv_opt1"
        app:layout_constraintStart_toEndOf="@+id/rv_opt1"
        app:layout_constraintTop_toTopOf="@+id/rv_opt1"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/rv_opt1_ans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="opt1_select"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/rv_opt1_eq"
        app:layout_constraintStart_toEndOf="@+id/rv_opt1_eq"
        app:layout_constraintTop_toTopOf="@+id/rv_opt1_eq"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/rv_opt2_before"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="/"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/rv_opt1_ans"
        app:layout_constraintStart_toEndOf="@+id/rv_opt1_ans"
        app:layout_constraintTop_toTopOf="@+id/rv_opt1_ans"
        tools:ignore="SmallSp" />
    <TextView
        android:id="@+id/rv_opt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:text="opt2"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/rv_opt2_before"
        app:layout_constraintStart_toEndOf="@+id/rv_opt2_before"
        app:layout_constraintTop_toTopOf="@+id/rv_opt2_before"
        tools:ignore="SmallSp" />
    <TextView
        android:id="@+id/rv_opt2_eq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/rv_opt2"
        app:layout_constraintStart_toEndOf="@+id/rv_opt2"
        app:layout_constraintTop_toTopOf="@+id/rv_opt2"
        tools:ignore="SmallSp" />
    <TextView
        android:id="@+id/rv_opt2_ans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5sp"
        android:text="opt2_select"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/rv_opt2_eq"
        app:layout_constraintStart_toEndOf="@+id/rv_opt2_eq"
        app:layout_constraintTop_toTopOf="@+id/rv_opt2_eq"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/rv_context"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15sp"
        android:layout_marginTop="20dp"
        android:text="가나다라마바사"
        android:textColor="@color/black"
        android:layout_marginBottom="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_opt2_ans" />


</androidx.constraintlayout.widget.ConstraintLayout>