<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/gray_bg_box">

    <LinearLayout
        android:id="@+id/LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/txt_yes_detail_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text=" "
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txt_detail_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textColor="@color/black" />

    </LinearLayout>

        <LinearLayout
            android:layout_below="@id/LinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/select_box"
            android:orientation="horizontal">
    <ImageButton
        android:id="@+id/img_minus"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginHorizontal="4dp"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/select_minus" />
        <TextView
            android:id="@+id/txt_select_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/img_minus"
            android:layout_marginHorizontal="10dp"
            android:layout_toRightOf="@id/img_minus"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="18sp" />
    <ImageButton
        android:id="@+id/img_plus"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@id/img_minus"
        android:layout_marginHorizontal="4dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/txt_select_num"
        android:background="@color/white"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/select_plus" />

        </LinearLayout>

    <ImageButton
        android:id="@+id/img_delete"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp"
        android:background="@color/browser_actions_bg_grey"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/select_close" />


        <TextView
            android:id="@+id/txt_select_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="55dp"
            android:layout_marginRight="28dp"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="55dp"
            android:layout_marginRight="10dp"
            android:text="원"
            android:textColor="@color/black"
            android:textSize="15dp" />


    </RelativeLayout>
</LinearLayout>